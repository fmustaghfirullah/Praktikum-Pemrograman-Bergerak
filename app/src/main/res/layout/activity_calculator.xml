<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cat_base"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_default_display"
        android:textSize="48sp"
        android:textColor="@color/cat_text"
        android:fontFamily="sans-serif-light"
        android:gravity="end"
        android:padding="24dp"
        android:background="@color/cat_surface0"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_clear"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_red"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_delete"
            android:textSize="20sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_maroon"/>

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_percent"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_peach"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_divide"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_peach"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_7"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_8"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_9"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_multiply"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_peach"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_4"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_5"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_6"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_minus"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_peach"/>

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_1"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_2"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_3"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_plus"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_peach"/>

        <!-- Row 5 -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="2"
            android:layout_columnSpan="2"
            android:layout_margin="4dp"
            android:text="@string/calc_0"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_dot"
            android:textSize="24sp"
            android:textColor="@color/cat_text"
            android:backgroundTint="@color/cat_surface1"/>

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="@string/calc_equals"
            android:textSize="24sp"
            android:textColor="@color/cat_base"
            android:backgroundTint="@color/cat_green"/>

    </GridLayout>
</LinearLayout>


