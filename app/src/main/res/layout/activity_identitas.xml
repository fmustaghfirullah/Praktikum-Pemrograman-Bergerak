<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/cat_base"
    android:gravity="center"
    tools:context=".IdentitasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilih_buah"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/cat_peach"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnApel"
        style="@style/MainMenuButton"
        android:text="@string/apel"
        android:backgroundTint="@color/cat_red"/>

    <Button
        android:id="@+id/btnJeruk"
        style="@style/MainMenuButton"
        android:text="@string/jeruk"
        android:backgroundTint="@color/cat_peach"/>

    <Button
        android:id="@+id/btnPisang"
        style="@style/MainMenuButton"
        android:text="@string/pisang"
        android:backgroundTint="@color/cat_yellow"/>

    <Button
        android:id="@+id/btnPear"
        style="@style/MainMenuButton"
        android:text="@string/pear"
        android:backgroundTint="@color/cat_mauve"/>

    <Button
        android:id="@+id/btnSemangka"
        style="@style/MainMenuButton"
        android:text="@string/semangka"
        android:backgroundTint="@color/cat_green"/>

</LinearLayout>


