<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    android:gravity="center"
    tools:context=".IdentitasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilih_buah"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnApel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apel"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#E91E63"/>

    <Button
        android:id="@+id/btnJeruk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jeruk"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FF9800"/>

    <Button
        android:id="@+id/btnPisang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pisang"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FFEB3B"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnPear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Pear"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#9C27B0"/>

    <Button
        android:id="@+id/btnSemangka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/semangka"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#4CAF50"/>

</LinearLayout>