<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cat_base"
    tools:context=".DetailBuahActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNamaBuah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_fruit_name"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/cat_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"/>

        <ImageView
            android:id="@+id/ivBuah"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/cat_surface0"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/gambar_buah"/>

        <TextView
            android:id="@+id/tvDeskripsiBuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_fruit_desc"
            android:textSize="16sp"
            android:textColor="@color/cat_text"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kembali"
            android:textSize="18sp"
            android:padding="16dp"
            style="@style/MainMenuButton"
            android:backgroundTint="@color/cat_overlay2"/>

    </LinearLayout>
</ScrollView>
