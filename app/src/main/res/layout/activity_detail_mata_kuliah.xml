<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cat_base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/cat_surface0">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_with_arrow"
                android:textColor="@color/cat_blue"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/detail_mata_kuliah"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/cat_blue"
                android:textAlignment="center"/>

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"/>
        </LinearLayout>

        <!-- Icon -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/cat_surface0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emoji_book"
                android:textSize="80sp"/>
        </LinearLayout>

        <!-- Nama Mata Kuliah -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/cat_surface0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_mk_name"
                android:textSize="12sp"
                android:textColor="@color/cat_subtext1"/>

            <TextView
                android:id="@+id/txtNamaMataKuliah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_mk_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/cat_text"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Pengampu -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/cat_surface0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_lecturer"
                android:textSize="12sp"
                android:textColor="@color/cat_subtext1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emoji_person"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/txtPengampu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_lecturer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/cat_text"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Kode Mata Kuliah -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/cat_surface0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_mk_code"
                android:textSize="12sp"
                android:textColor="@color/cat_subtext1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emoji_tag"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/txtKodeMataKuliah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_mk_code"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/cat_blue"
                    android:fontFamily="monospace"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Deskripsi -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@color/cat_surface0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_description"
                android:textSize="12sp"
                android:textColor="@color/cat_subtext1"/>

            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_description"
                android:textSize="15sp"
                android:textColor="@color/cat_text"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:textAlignment="textStart"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
